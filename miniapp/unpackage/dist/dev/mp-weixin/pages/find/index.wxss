.mainPage {
  padding: 0 20rpx;
}
.mainPage .main-title {
  margin-top: 5px;
  margin-bottom: 5px;
  border-left: 3px solid goldenrod;
  padding-left: 15rpx;
  font-size: 16px;
  font-weight: 600;
}
.grid-text {
  font-size: 16px;
  margin-top: 6px;
}
.scroll-list {
  display: flex;
  flex-direction: column;
}
.scroll-list__goods-item {
  margin-right: 20px;
}
.scroll-list__goods-item__image {
  width: 60px;
  height: 60px;
  border-radius: 4px;
}
.scroll-list__goods-item__text {
  color: #f56c6c;
  text-align: center;
  font-size: 3px;
  margin-top: 5px;
}
.swiper {
  height: calc(100vh - 320px);
}
.activity {
  padding-bottom: 10px;
}

