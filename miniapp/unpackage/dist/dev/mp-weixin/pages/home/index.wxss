.mainPage {
  padding: 0 20rpx;
}
.mainPage .main-title {
  margin-top: 5px;
  margin-bottom: 5px;
  border-left: 3px solid goldenrod;
  padding-left: 15rpx;
  font-size: 16px;
  font-weight: 600;
}
.grid-text {
  font-size: 16px;
  margin-top: 6px;
}
.nav {
  width: 100%;
}
.notice {
  display: flex;
  background-color: goldenrod;
  border-radius: 5px;
  padding: 10px;
  height: 60px;
}
.notice .notice-title {
  width: 28px;
  line-height: 30px;
  vertical-align: middle;
  font-weight: 600;
  color: white;
}
.notice .notice-content {
  flex: 1;
  font-size: 14px;
  line-height: 20px;
  color: white;
}
.jingxuan .box {
  display: flex;
}
.jingxuan .box .box-l {
  flex: 1;
}
.jingxuan .box .box-l .box1 {
  height: calc(100vw/2 - 55px);
  width: calc((100vw - 30px)/2);
  overflow: hidden;
}
.jingxuan .box .box-l .box2 {
  margin-top: 10px;
  height: 55px;
  width: calc((100vw - 30px)/2);
  overflow: hidden;
}
.jingxuan .box .box-r {
  flex: 1;
}
.jingxuan .box .box-r .box1,
.jingxuan .box .box-r .box2,
.jingxuan .box .box-r .box3 {
  margin-top: 10px;
  height: 66px;
  width: calc((100vw - 25px)/2);
  overflow: hidden;
}
.jingxuan .box .box-r .box1 {
  margin-top: 0px;
}

